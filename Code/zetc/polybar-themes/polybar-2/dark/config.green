;==========================================================

[bar/main]
width = 100%
height = 42
offset-x = 2%
offset-y = 2%
bottom = false
fixed-center = true
line-size = 3
radius = 0

background = ${color.bg}
foreground = ${color.fg}

border-size = 10
border-color = #00000000

tray-position = center

;This DPI looks good on the laptop
dpi = 192

locale = es_AR.UTF-8
;en_US.UTF-8

;==========================================================

font-0 = "Fantasque Sans Mono:pixelsize=10;3"
font-1 = "Iosevka Nerd Font:pixelsize=13;3"

;==========================================================

cursor-click = pointer
cursor-scroll = ns-resize

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

;== Module Location ========================================================

modules-left = workspaces
modules-center = date
modules-right = mpd pkg volume xbacklight battery network powermenu

;override-redirect = true
;wm-restack = i3

;== Modules ========================================================

[module/arch]
type = custom/text
content = 
;alt icons = 
content-padding = 2
content-background = ${color.shade1}
content-foreground = ${color.fg}
click-left = scripts/menu_1
click-right = scripts/rmenu_wi_1

[module/workspaces]
type = internal/i3
;xworkspaces
pin-workspaces = false
enable-click = true
enable-scroll = true
format-padding = 1

ws-icon-0 = 1;❶
ws-icon-1 = 2;❷
ws-icon-2 = 3;❸
ws-icon-3 = 4;❹
ws-icon-4 = 5;❺
ws-icon-5 = 6;❻
ws-icon-6 = 7;❼
ws-icon-7 = 8;❽
ws-icon-8 = 9;❾
ws-icon-9 = 10;❿

; icon-default = 

format = <label-state> <label-mode>
; format-background = ${color.shade2}
; label-active = 
; label-occupied = 
; label-urgent = 
; label-empty = 

label-mode = %mode%
label-mode-background = #e60053

label-focused = %index%
label-focused-foreground = #ffffff
label-focused-background = #1B5E20
label-focused-underline = #fba922
label-focused-padding = 1

label-unfocused = %index%
label-unfocused-padding = 1
label-unfocused-foreground = #ffffff
label-unfocused-background = ${color.shade6}

label-separator = |
label-separator-background = ${color.shade6}
label-separator-padding = 0

; label-empty-padding = 1
; label-active-padding = 1
; label-urgent-padding = 1
; label-occupied-padding = 1
;
; label-empty-foreground = ${color.fg}
; label-active-foreground = ${color.acolor}
; label-urgent-foreground = ${color.curgent}
; label-occupied-foreground = ${color.coccupied}

