;==========================================================

[bar/main]
width = 100%
height = 42
;offset-x = 2%
;offset-y = 2%
bottom = false
fixed-center = true
line-size = 3
radius = 0

background = ${color.bg}
foreground = ${color.fg}

border-size = 8
border-color = #00000000

tray-position = center
; tray-background = ${color.shade3}
tray-maxsize = 200
tray-offset-x = 5%

; This DPI looks good on my laptop
dpi = 192

locale = es_AR.UTF-8
; locale = en_US.UTF-8

;====================================

; font-0 = "Fantasque Sans Mono:pixelsize=12;3"
font-0 = "Noto Sans:pixelsize=10;3"
font-1 = "Iosevka Nerd Font:pixelsize=13;4"

;====================================

cursor-click = pointer
cursor-scroll = ns-resize

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

;== Module Location =================

modules-left = workspaces
modules-center = date
modules-right = mpd pkg cpu memory volume xbacklight battery wireless-network network powermenu

; wm-restack = i3
; override-redirect = true


;===================================================================


[bar/minimalist]
inherit = bar/main

modules-left = workspaces-mnm
modules-center = date-mnm
modules-right = mpd cpu-mnm memory-mnm volume-mnm battery-mnm network-mnm

tray-position = right
width = 99.5%
tray-offset-x = 0

; wm-restack = i3
; override-redirect = true


;== Modules ========================================================

[module/workspaces]
type = internal/i3
;xworkspaces
pin-workspaces = false
enable-click = true
enable-scroll = true
format-padding = 0

ws-icon-0 = 1;❶
ws-icon-1 = 2;❷
ws-icon-2 = 3;❸
ws-icon-3 = 4;❹
ws-icon-4 = 5;❺
ws-icon-5 = 6;❻
ws-icon-6 = 7;❼
ws-icon-7 = 8;❽
ws-icon-8 = 9;❾
ws-icon-9 = 10;❿
ws-icon-default = 

format = " ‏ <label-state> ‏ <label-mode>"
format-background = ${color.shade6}
; label-active = 
; label-occupied = 
; label-urgent = 
label-empty = 

label-mode = %mode%
label-mode-background = #e60053

; focused = Active workspace on focused monitor
label-focused = %icon%
label-focused-padding = 2
label-focused-foreground = #ffffff
label-focused-background = #1B5E20
label-focused-underline = #fba922

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-padding = 2
;label-visible-padding = 3 ?
label-visible-foreground = #ffffff
; label-visible-background = ${color.shade6}
label-visible-background = #1B5E20
label-visible-underline = ${color.cyan}

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 2
label-unfocused-foreground = #ffffff
label-unfocused-background = ${color.shade6}

label-urgent = %icon%
label-urgent-padding = 2
label-urgent-background = ${color.orange}

label-separator = "|"
label-separator-background = ${color.shade6}
label-separator-padding = 0

; label-empty-padding = 1
; label-active-padding = 1
; label-urgent-padding = 1
; label-occupied-padding = 1
;
; label-empty-foreground = ${color.fg}
; label-active-foreground = ${color.acolor}
; label-occupied-foreground = ${color.coccupied}

[module/workspaces-mnm]
inherit = module/workspaces
format = <label-state> <label-mode>
format-background =
label-focused = %index%
label-urgent = %index%
label-focused-background =
label-visible-background =
label-unfocused-background =
label-focused-underline = #ffffff
label-visible-underline = #8c8c8c
;${color.grey}
label-visible-padding = 1
label-focused-padding = 1
label-unfocused-padding = 1
label-separator =


[module/mpd]
type = internal/mpd
